@model IEnumerable<QLSVVV.Models.Course>

<style>
    body {
        font-family: 'Courier New', Courier, monospace;
        background-color: #000000;
        color: #00ff00;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #002200;
        box-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
        border-radius: 8px;
        margin-top: 20px;
    }

    h1 {
        text-align: center;
        color: #00ff00;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .search-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .search-input {
        width: 300px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #00ff00;
        border-radius: 5px;
        background-color: #003300;
        color: #00ff00;
        margin-right: 10px;
    }

    .search-btn {
        padding: 10px 20px;
        font-size: 16px;
        color: #00ff00;
        background-color: #000000;
        border: 1px solid #00ff00;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .search-btn:hover {
            background-color: #00ff00;
            color: #000000;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #000000;
        color: #00ff00;
    }

    table, th, td {
        border: 1px solid #00ff00;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #003300;
    }

    tr:nth-child(even) {
        background-color: #002200;
    }

    tr:hover {
        background-color: #004400;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: #00ff00;
        background-color: #000000;
        border: 1px solid #00ff00;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #00ff00;
        color: #000000;
    }

        .btn-primary:hover {
            background-color: #00ff00;
            color: #000000;
        }

    .btn-sm {
        font-size: 14px;
        padding: 5px 10px;
    }

    .back-link {
        text-align: center;
        margin: 20px 0;
    }

        .back-link a {
            color: #00ff00;
            text-decoration: none;
            padding: 10px 20px;
            border: 1px solid #00ff00;
            border-radius: 5px;
            background-color: #000000;
            display: inline-block;
            transition: background-color 0.3s, color 0.3s;
        }

            .back-link a:hover {
                background-color: #00ff00;
                color: #000000;
            }
</style>

<div class="container">
    <h1>Course Management</h1>

    <!-- Search container -->
    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Search by Name...">
        <button onclick="search()" class="search-btn">Search</button>
    </div>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create Course</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Class</th>
                <th>Date Start</th>
                <th>Date End</th>
                <th>Major</th>
                <th>Lecturer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Class</td>
                    <td>@item.DateStart?.ToString("d")</td>
                    <td>@item.DateEnd?.ToString("d")</td>
                    <td>@item.Major</td>
                    <td>@item.Lecturer</td>
                    <td>
                        <a class="btn btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-sm" asp-action="EditCourse" asp-route-id="@item.Id">ViewCourse</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="back-link">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Back To Home</a>
    </div>
</div>

<script>
    function search() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.querySelector("table");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[1]; // Search in the second column (Name column)
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>
