@model QLSVVV.Models.Course
<style>
    body {
        font-family: Consolas, monospace;
        background-color: #1b1b1b;
        color: #00ff00;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #333;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        margin-top: 20px;
    }

    h1 {
        text-align: center;
        color: #00ff00;
        margin-bottom: 20px;
    }

    h2 {
        color: #00ff00;
        border-bottom: 2px solid #00ff00;
        padding-bottom: 5px;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table, th, td {
        border: 1px solid #444;
    }

    th, td {
        padding: 10px;
        text-align: left;
        color: #00ff00;
    }

    th {
        background-color: #222;
    }

    tr:nth-child(even) {
        background-color: #2b2b2b;
    }

    tr:hover {
        background-color: #444;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #444;
        border-radius: 5px;
        background-color: #222;
        color: #00ff00;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        cursor: pointer;
        color: #fff;
    }

    .btn-primary {
        background-color: #0066cc;
    }

        .btn-primary:hover {
            background-color: #004c99;
        }

    .btn-danger {
        background-color: #cc0000;
    }

        .btn-danger:hover {
            background-color: #990000;
        }

    .btn-secondary {
        background-color: #666;
    }

        .btn-secondary:hover {
            background-color: #444;
        }

    .action-buttons {
        display: flex;
        justify-content: space-between;
    }
</style>
<div class="container">
    <h1>Edit Course: @Model.Name</h1>

    <h2>Students In This Course</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courseStudent in Model.CourseStudent)
            {
                <tr>
                    <td>@courseStudent.Student.Id</td>
                    <td>@courseStudent.Student.Name</td>
                    <td>
                        <form asp-action="RemoveStudentFromCourse" method="post">
                            <input type="hidden" name="courseId" value="@Model.Id" />
                            <input type="hidden" name="studentId" value="@courseStudent.Student.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Add Student to Course</h2>
    <form asp-action="AddStudentToCourse" method="post">
        <input type="hidden" name="courseId" value="@Model.Id" />
        <div class="form-group">
            <label for="studentId">Student</label>
            <select id="studentId" name="studentId" class="form-control">
                @foreach (var student in ViewBag.AllStudents)
                {
                    <option value="@student.Id">@student.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Student</button>
    </form>

    <div class="action-buttons">
        <a asp-action="ManageCourse" class="btn btn-secondary">Back To Course</a>
    </div>
</div>
