@model QLSVVV.Models.Course

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        font-family: Consolas, monospace;
        background-color: #1b1b1b;
        color: #00ff00;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #333;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        margin-top: 20px;
    }

    h1, h3, h4 {
        color: #00ff00;
    }

    dl.row {
        margin-top: 20px;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: #00ff00;
    }

    dd.col-sm-10 {
        margin-bottom: 10px;
        color: #00ff00;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        cursor: pointer;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    a {
        color: #00ff00;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
</style>

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Course</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Class)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Class)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateStart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateStart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateEnd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Major)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Major)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="action-buttons">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @* <a asp-action="ManageCoure" class="btn btn-secondary">Back to List</a> *@
                <a asp-action="ManageCourse" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
    </div>
</div>
